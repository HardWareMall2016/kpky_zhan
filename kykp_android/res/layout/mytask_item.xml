<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_mytask_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white"
    android:minHeight="@dimen/min_item_height"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="8dp"
      >

    <ImageView
        android:id="@+id/mytask_left_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/mytask_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="10dp"
        android:layout_weight="2"
        android:textColor="@color/text_color_content"
        android:textSize="@dimen/text_size_normal"
        />

    <TextView
        android:id="@+id/mytask_mark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#FC577D"
        android:textSize="@dimen/text_size_normal"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/mytask_scale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text_color_content"
        android:textSize="@dimen/text_size_normal"
        android:singleLine="true"
        android:text="11/200"/>

    <TextView
        android:id="@+id/mytask_unfinish"
        android:layout_width="@dimen/mytask_unfinish_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_task_item_unfinish"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_normal"
        android:singleLine="true"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"/>

    <ImageView
        android:id="@+id/right_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:src="@drawable/arrow_right" />

</LinearLayout>