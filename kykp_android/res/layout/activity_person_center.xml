<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:my="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:pull_refresh="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
     >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/person_center_bg">
   <RelativeLayout 
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="25dp"
       >
     <ImageView
            android:id="@+id/person_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/person_center_back_selector" />
      <TextView
            android:id="@+id/person_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/person_center" /> 
        <ImageView 
            android:id="@+id/person_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/action_bar_icon_more_selector"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp"
            />
   </RelativeLayout>
   
   <com.zhan.kykp.widget.CircleImageView
       android:id="@+id/person_avatar"
       android:layout_height="94dp"
       android:layout_width="94dp"
       android:src="@drawable/personal"
       android:layout_gravity="center"
       android:layout_marginTop="10dp"
       my:border_color="#50ffffff"
       my:border_width="4dp"
       />
   <TextView
       android:id="@+id/tv_person_name"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="4dp"
      android:textSize="18sp"
      android:textColor="@color/white"
      android:visibility="gone"
       />
   <RelativeLayout 
       android:id="@+id/rl_person_center"
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:gravity="center"
       android:layout_marginTop="2dp"
       android:visibility="gone"  >
       <TextView 
           android:id="@+id/focus_ed"
           android:layout_width="90dp"
           android:layout_height="wrap_content"
           android:textColor="@color/white"
           android:gravity="center"
           android:textSize="16sp"
           android:singleLine="true"
           android:background="@drawable/select_focused_bg"
           android:text="@string/person_followeeed"
           /> 
       <TextView 
           android:id="@+id/person_letter"
           android:layout_width="90dp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="20dp"
           android:textColor="@color/white"
           android:gravity="center"
           android:textSize="16sp"
           android:singleLine="true"
           android:text="@string/person_letter"
           android:layout_toRightOf="@+id/focus_ed"
           android:background="@drawable/select_focused_bg"/>
   </RelativeLayout>
   <LinearLayout 
       android:layout_height="wrap_content"
       android:layout_width="fill_parent"
       android:orientation="horizontal"
       android:gravity="center"
       android:layout_marginTop="4dp">
       <TextView 
           android:id="@+id/person_focus"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:textColor="@color/white"
           android:gravity="center"
           android:textSize="16sp"
           android:layout_weight="1"
           android:singleLine="true"
           android:text="@string/person_focus"
           android:background="@drawable/tv_person_bg"
           android:layout_marginLeft="80dp"
           />

       
       <TextView 
           android:id="@+id/person_fans"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="80dp"
           android:textColor="@color/white"
           android:gravity="center"
           android:textSize="16sp"
           android:layout_weight="1"
           android:singleLine="true"
           android:text="@string/person_fans"
           android:background="@drawable/tv_person_bg"/>
   </LinearLayout>
   </LinearLayout>
   <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_pesron_speaking"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="32dp"
            android:text="@string/person_speaking"
            android:textSize="@dimen/text_size_small"
           />

        <TextView
            android:id="@+id/tv_pesron_answer"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:minHeight="32dp"
            android:text="@string/person_answer"
            android:textSize="@dimen/text_size_small"
            />
    </LinearLayout>

   <LinearLayout 
       android:id="@+id/person_ll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
      <ImageView
        android:id="@+id/person_empty_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="center"
        android:src="@drawable/no_answer"/>
    <com.zhan.kykp.widget.FlatButton
        android:id="@+id/person_spokensquare"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        my:normalColor="#f46A7A"
        my:buttontext="去口语广场练习"
        android:layout_gravity="center" />
    </LinearLayout>
    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/person_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:cacheColorHint="#00000000"
        android:divider="@color/transparent"
        android:dividerHeight="12dp"
        pull_refresh:ptrAnimationStyle="scale"
        android:groupIndicator="@null"
        android:listSelector="#00000000"
         />
    <!--   pull_refresh:ptrAnimationStyle="scale"   如果去掉的话，就会恢复原先刷新样式     -->
</LinearLayout>
