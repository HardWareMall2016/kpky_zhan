<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_bold_underline"
    android:minHeight="@dimen/min_item_height"
    android:orientation="horizontal"
    android:paddingBottom="19dp"
    android:paddingEnd="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="11dp"
    android:paddingStart="16dp"
    android:paddingTop="19dp" >

    <ImageView
        android:id="@+id/img_person_eng_item"
        android:layout_width="112dp"
        android:layout_height="82dp"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/person_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="title"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/person_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="content"
            android:textColor="@color/text_color_content"
            android:textSize="@dimen/text_size_normal" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/person_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:textColor="@color/text_color_supplementary"
                android:textSize="@dimen/text_size_small"
                android:text="time" />

            <TextView
                android:id="@+id/person_item_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@color/text_color_supplementary"
                android:textSize="@dimen/text_size_small"
                android:text="data" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>