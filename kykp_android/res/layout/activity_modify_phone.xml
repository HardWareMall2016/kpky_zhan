<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circle_image="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" >

    <com.zhan.kykp.widget.CircleImageView
        android:id="@+id/avatar"
        android:layout_width="106dp"
        android:layout_height="106dp"
        circle_image:border_width="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/bird" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_white_rounded"
        android:drawableLeft="@drawable/icon_username"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:hint="@string/hint_phone_number"
        android:inputType="phone"
        android:minHeight="@dimen/min_item_height"
        android:paddingLeft="16dp"
        android:textSize="16sp" 
        android:layout_weight="3"
        android:maxLength="11"/>
     <Button
            android:id="@+id/btn_get_sms_code"
            style="@style/text_white_btn_style"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="2"
            android:background="@drawable/bg_cyan_rounded"
            android:text="@string/get_sms_code" />
     </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" >

        <EditText
            android:id="@+id/sms_code"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="@drawable/bg_white_rounded"
            android:drawableLeft="@drawable/icon_password"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:hint="@string/input_sms_code"
            android:inputType="number"
            android:minHeight="@dimen/min_item_height"
            android:paddingLeft="16dp"
            android:textSize="16sp" />

       <!--  <Button
            android:id="@+id/btn_get_sms_code"
            style="@style/text_white_btn_style"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_weight="2"
            android:background="@drawable/bg_cyan_rounded"
            android:text="@string/get_sms_code" /> -->
    </LinearLayout>

    <Button
        android:id="@+id/btn_next"
        style="@style/text_white_btn_style"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_dark_red_rounded"
        android:text="@string/modify_phone_over" />

</LinearLayout>