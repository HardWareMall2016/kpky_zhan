<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:paddingTop="30dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question:"
            android:textColor="#494949"
            android:textSize="@dimen/text_size_large" />

        <com.zhan.kykp.widget.ScrollableTextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="5dp"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:singleLine="false"
            android:textColor="@color/text_color_content"
            android:textSize="18sp" />

        <com.zhan.kykp.widget.ProgressWheel
            android:id="@+id/btn_progress"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            ProgressWheel:barColor="#f65f4c"
            ProgressWheel:barLength="60dp"
            ProgressWheel:barWidth="5dp"
            ProgressWheel:contourColor="@color/dark_red"
            ProgressWheel:rimColor="@color/dark_red"
            ProgressWheel:rimWidth="2dp"
            ProgressWheel:summaryColor="@color/dark_red"
            ProgressWheel:summarySize="16sp"
            ProgressWheel:textColor="@color/dark_red"
            ProgressWheel:textLinePadding="12dp"
            ProgressWheel:textSize="46sp"
            ProgressWheel:unit="S"
            ProgressWheel:unit_padding="8dp" />

        <ImageView
            android:id="@+id/btn_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:src="@drawable/recording" />
    </LinearLayout>

</ScrollView>