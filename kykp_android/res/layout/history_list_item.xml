<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_bold_underline"
    android:minHeight="@dimen/min_item_height"
    android:orientation="horizontal"
    android:paddingBottom="19dp"
    android:paddingEnd="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="11dp"
    android:paddingStart="16dp"
    android:paddingTop="19dp" >

    <ImageView
        android:id="@+id/img_question"
        android:layout_width="113dp"
        android:layout_height="82dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/sample1" />

    <LinearLayout

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/text_color_content"
            android:textSize="@dimen/text_size_normal" 
            />
        
        <RelativeLayout 
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
         <TextView
            android:id="@+id/data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:textColor="@color/text_color_supplementary"
            android:textSize="@dimen/text_size_small"
            android:ellipsize="end"
            android:maxLines="1"
             />
         <TextView 
             android:id="@+id/history_item_data"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
             android:textColor="@color/text_color_supplementary"
             android:ellipsize="end"
             android:maxLines="1"
             />
         </RelativeLayout>
