<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="68dp"
    android:paddingEnd="16dp"
    android:paddingLeft="21dp"
    android:paddingRight="16dp"
    android:paddingStart="21dp" >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="@color/text_color_main"
        android:textSize="22sp" />

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/arrow_right" />

    <Button
        android:id="@+id/btn_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_cyan_rounded_border"
        android:minHeight="0dp"
        android:paddingBottom="4dp"
        android:paddingTop="4dp"
        android:text="@string/download"
        android:textColor="@color/cyan"
        android:textSize="18sp" />

    <com.zhan.kykp.widget.ProgressWheel
        android:id="@+id/btn_download_progress"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        ProgressWheel:barColor="@color/cyan"
        ProgressWheel:barLength="60dp"
        ProgressWheel:barWidth="2dp"
        ProgressWheel:rimColor="@color/cyan"
        ProgressWheel:rimWidth="1dp"
        ProgressWheel:textSize="12sp"
        ProgressWheel:textColor="@color/cyan" />

</RelativeLayout>